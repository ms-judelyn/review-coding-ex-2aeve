//Import the scanner class from the java.util package
import java.util.Scanner;

//This class takes a string name as input and displays the message "RestaurantBill" with the inputted name
public class RestaurantBill {

    //Define the main() method
    public static void main(String[] args) {

        //Create a scanner object name input
        Scanner scanner = new Scanner(System.in);

        //Ask the user to enter the total number of people in their table
        System.out.println("enter the total number of people in your table:");
        int numPeople = scanner.nextInt();

        //Ask the user to enter the total bill amount
        System.out.println("Enter the total bill amount");
        double billAmount = scanner.nextDouble();

        //Ask the user to enter the percentage of tip they want to leave
        System.out.println("Enter the percentage of the tip they want to leave");
        double tipPercentage = scanner.nextDouble();

        //Calculate the service charge amount based on the number of people in the table
        double serviceChargeAmount = 0;
        if (numPeople >= 1 && numPeople <= 4) {
            serviceChargeAmount = billAmount * 0.05;
        } else if (numPeople >= 5 && numPeople <= 7) {
            serviceChargeAmount = billAmount * 0.08;
        } else if (numPeople >= 8) {
            serviceChargeAmount = billAmount * 0.15;
        }

        //Calculate the tip amount based on the tip percentage and the bill amount
        double tipAmount = billAmount * (tipPercentage / 100);

        //Calculate the total amount to pay by adding the bill amount, service charge amount and tip amount
        double totalAmount = billAmount + serviceChargeAmount + tipAmount;

        //Display the service charge amount, tip amount and the total amount to pay
        System.out.println("\nService amount: $" + serviceChargeAmount);
        System.out.println("Tip amount:$" + tipAmount);
        System.out.println(" Total amount to pay: $" + totalAmount);

    }
}















