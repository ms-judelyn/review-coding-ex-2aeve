//Import the scanner class from the java.util package
import java.util.Scanner;
//Blueprint for creating objects and contains the new method and fields of the program
public class TipCalculator {
    //Define the main method
    public static void main(String[] args) {
        //Create a scanner object named input
        Scanner scanner=new Scanner(System.in);
        //Print a message asking for the totalBillAmount
        System.out.print("Enter the total bill amount: ");
        
        //Read the double totalBillamount from the input
        double totalBillAmount=scanner.nextDouble();
        //Print a message asking for the percentage tip you want to leave
        System.out.print("Enter the percentage of tip you want to leave: ");
        //Read the double tip percentage from the input
        double tipPercentage=scanner.nextDouble();
        //Calculate the tip Amount
        double tipAmount=(totalBillAmount * tipPercentage)/100;
        //Calculate the total amount to pay
        double totalAmountToPay=totalBillAmount + tipAmount;
        //Print a message asking for tip amount
        System.out.println("Tip amount:" + tipAmount);
        //Print a message asking for total amount to pay
        System.out.println("Total amount to pay:" + totalAmountToPay);
        //CLosing the code or it ended
        scanner.close();
