//To read or import the "Scanner" input from the user.
import java.util.Scanner;

//It serves as the entry point for Java Program
public class day1 {

    //Define main method
    public  static void main(String []args) {

    // Object that reads input from the standard input stream
        Scanner scanner=new Scanner(System.in);

    //This line prints the message asking the user to enter the total bill amount.
        System.out.println("Enter the total bill amount: ");

    //Read bill amount from user input
        double billamount=scanner.nextDouble();

    // Prompts user tip percentage
        System.out.println("Enter the percentage of tip you want to leave");

    //Read tip percentage from user input.
        double TipPercentage= scanner.nextDouble();

    //Calculate Tip Amount.
        double TipAmount=(billamount * TipPercentage)/100;

    //Calculate total amount to pay.
        double totalamount= billamount + TipAmount;

    //Display tip amount and total amount to pay.
        System.out.println("Tip amount : $" + TipAmount);
        System.out.println("Total amount to pay: $" + totalamount);


    //Close the 'Scanner"
    scanner.close();



    }
}
