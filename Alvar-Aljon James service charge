import java.util.Scanner;

public class RestaurantBillCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Ask user to enter the total number of people in their table
        System.out.print("Enter the total number of people in your table: ");
        int totalPeople = scanner.nextInt();

        // Ask user to enter the total bill amount
        System.out.print("Enter the total bill amount: ");
        double billAmount = scanner.nextDouble();

        // Ask user to enter the percentage of tip
        System.out.print("Enter the percentage of tip you want to leave (e.g., 15 for 15%): ");
        double tipPercentage = scanner.nextDouble();

        // Calculate service charge based on the total number of people
        double serviceCharge;
        if (totalPeople >= 1 && totalPeople <= 4) {
            serviceCharge = billAmount * 0.05; // 5% service charge
        } else if (totalPeople >= 5 && totalPeople <= 7) {
            serviceCharge = billAmount * 0.08; // 8% service charge
        } else {
            serviceCharge = billAmount * 0.15; // 15% service charge
        }

        // Calculate the tip amount
        double tipAmount = (billAmount * tipPercentage) / 100;

        // Calculate the total amount to pay
        double totalAmount = billAmount + serviceCharge + tipAmount;

        // Display the service charge amount, tip amount, and total amount to pay
        System.out.println("Service charge amount: $" + serviceCharge);
        System.out.println("Tip amount: $" + tipAmount);
        System.out.println("Total amount to pay: $" + totalAmount);

        // Close the scanner
        scanner.close();
    }
}
