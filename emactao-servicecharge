//Import the scanner class from the java.util package
import java.util.Scanner;

//Blueprint for creating objects and contains the new method and fields of the program
public class RestaurantBillCalculator {

  //Define the main method
    public static void main(String[] args) {

     //Create a scanner object named input
        Scanner scanner = new Scanner(System.in);

        //Print a message asking for the total number of people
        System.out.print("Enter the total number of people: ");

        //Read the int number of people from the input
        int numPeople = scanner.nextInt();

        //Print a message asking for the total bill amount
        System.out.print("Enter the total bill amount: ");

        //Read the double total bill from the input
        double totalBill = scanner.nextDouble();

        //Print a message asking for the percentage of tip
        System.out.print("Enter the percentage of tip: ");

        //Read the double tip percentage from the input
        double tipPercentage = scanner.nextDouble();

        //Read the double service charge from the input
        double serviceCharge = 0;

        //calculate the service charged based on the number of people in the table according to the given conditions
        if (numPeople >= 1&& numPeople <=4) {
            serviceCharge = 0.05 * totalBill;
        } else if (numPeople >=5&& numPeople <=7) {
            serviceCharge = 0.08 * totalBill;
        } else if (numPeople >=8) {
            serviceCharge = 0.15 * totalBill;
        }
        // Calculate the tip amount
        double tipAmount = (tipPercentage/100) * totalBill;

        //Calculate the total amount
        double totalAmount = totalBill + serviceCharge + tipAmount;

        //Print a message asking for service charge amount
        System.out.println("Service charge amount: $ " + serviceCharge);

        // Print a message asking for tip amount
        System.out.println("Tip Amount: $ " + tipAmount );

        //Print a message asking for total amount to pay
        System.out.println("Total Amount to PAy: $ " + totalAmount);

        //CLosing the code or it ended
        scanner.close();


    }
}
