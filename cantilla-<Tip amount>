// Import the Scanner class to read user input
import java.util.Scanner;

// Define a class named TipCalculator
public class TipCalculator {
     
    //Define the main() method 
    public static void main(String[] args) {

        // Create a Scanner object to read input from the user
        Scanner scanner = new Scanner(System.in);

        // Prompt the user to enter the total bill amount
        System.out.print("Enter the total bill amount: ");
        double totalBillAmount = scanner.nextDouble();

        // Prompt the user to enter the percentage of tip they want to leave
        System.out.print("Enter the percentage of tip: ");
        double tipPercentage = scanner.nextDouble();

        // Calculate the tip amount (total bill amount * tip percentage)
        double tipAmount = totalBillAmount * (tipPercentage / 100);

        // Calculate the total amount to pay (total bill amount + tip amount)
        double totalAmountToPay = totalBillAmount + tipAmount;

        // Display the calculated values
        System.out.println("Tip Amount: " + tipAmount);
        System.out.println("Total Amount to Pay: " + totalAmountToPay);

        // Close the Scanner object
        scanner.close();
    }
}
