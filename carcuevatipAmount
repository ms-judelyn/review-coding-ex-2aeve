//Import java the class from java.util package
import java.util.Scanner;

//This class takes in a string name as input and displays the message "TipCalculator" with the inputted name
public class TipCalculator {

    //Define the main() method
    public static void main(String[]args) {

        //Create a Scanner object named input
        Scanner scanner = new Scanner(System.in);

        //Display the message  "Enter the total bill: "to the screen
        System.out.println("Enter the total bill amount");

        //Declares a variable named 'totalBillAmount of type double'
        double totalBillAmount = scanner.nextDouble();

        //Display the message "Enter the percentage of tip you want to leave:" to the screen
        System.out.println("Enter the percentage of tip you want to leave:");

        //Declares a variable named 'tipPercentage' of type 'double'
        double tipPercentage =scanner.nextDouble();

        //Calculate tip amount
        double tipAmount = (totalBillAmount * tipPercentage) / 100;

        //Calculate amount of total to pay
        double Amountoftotaltopay = totalBillAmount + tipAmount;

        //Display tip amount and total amount to pay
        System.out.println("Tip amount: $ " + tipAmount);
        System.out.println("Total amount to pay $" +  Amountoftotaltopay  );





    }
}
